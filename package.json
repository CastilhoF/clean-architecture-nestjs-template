{
  "name": "template-clean-architecture-and-nestjs",
  "version": "0.0.1",
  "description": "Template repository that uses Clean Architecture and NestJS as a base, already has several validation wrappers and works with a clean entity base, just id, createdAt and updatedAt.",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:local": "NODE_ENV=local nest start --builder swc --watch",
    "start:local:dev": "NODE_ENV=development nest start --builder swc --watch",
    "start:dev": "NODE_ENV=development node dist/main",
    "start:prod": "NODE_ENV=production node dist/main",
    "start:debug": "NODE_ENV=local nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=testing jest",
    "test:doh": "NODE_ENV=testing jest --detectOpenHandles",
    "test:watch": "NODE_ENV=testing jest --watch",
    "test:cov": "NODE_ENV=testing jest --coverage",
    "test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=testing jest --config ./test/jest-e2e.json",
    "migrate:db:local": "dotenv -e .env.local -- npx prisma migrate dev --name init",
    "migrate:db:development": "dotenv -e .env.development -- npx prisma migrate dev --name init"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/websockets": "^10.2.8",
    "@prisma/client": "^5.8.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/redis": "^4.0.11",
    "axios": "^1.3.4",
    "cache-manager": "5.3.2",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "joi": "^17.8.3",
    "nest-winston": "^1.9.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "phone": "^3.1.42",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.11",
    "@types/multer": "^1.4.7",
    "@types/node": "20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^@/test/(.*)$": "<rootDir>/test/$1",
      "^src/(.*)$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
